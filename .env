# Which frontends are allowed to talk to this API (comma-separated)
CORS_ORIGINS=http://localhost:5173

# Cookie/session config
SESSION_COOKIE_NAME=__session
SESSION_COOKIE_DAYS=5
NODE_ENV=development
PORT=4000

# Local service account for firebase-admin (absolute path on your machine)
# Download from Firebase Console → Project Settings → Service accounts → Generate new private key
GOOGLE_APPLICATION_CREDENTIALS=/ABSOLUTE/PATH/TO/serviceAccountKey.json
